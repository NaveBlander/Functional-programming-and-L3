{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug Mocha Tests",
        "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
        "args": [
          "--timeout",
          "999999",
          "--colors",
          "${workspaceFolder}/test/**/*.test.ts"
        ],
        "internalConsoleOptions": "openOnSessionStart",
        "env": {
          "TS_NODE_FILES": "true",
          "TS_NODE_TRANSPILE_ONLY": "true"
        },
        "runtimeArgs": [
          "--require",
          "ts-node/register"
        ],
        "outFiles": [
          "${workspaceFolder}/**/*.js"
        ]
      }
    ]
  }
  